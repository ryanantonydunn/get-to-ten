<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ryanantonydunn.tiles" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Make tile number go big</name>
    <description>
        A game where you make the number on the tiles big
    </description>
    <author email="ryanantonydunn@gmail.com" href="http://maketilenumbergobig.com">
        Ryan Dunn
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <hook src="hooks/copy-build-extras-gradle.js" type="before_build" /> -->
        <preference name="android-targetSdkVersion" value="28" />
        <preference name="android-minSdkVersion" value="19" />
        <!-- <resource-file src="google-services.json" target="app/google-services.json" /> -->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" />
    <engine name="android" />
</widget>
